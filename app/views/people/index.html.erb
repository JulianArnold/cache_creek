<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1>People</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>
            Name
            <br />
            Organisation
          </th>
          <th>
            Email
            <br />
            Phone
          </th>
          <th>LinkedIn</th>
          <th>Next contact</th>
          <th>Source</th>
          <th>CV sent</th>
          <th>CV version</th>
          <th>Status</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td>
              <%= link_to person.full_name, person %>
              <br />
              <%= link_to person.organisation.name, person.organisation %>
            </td>
            <td>
              <%= mail_to person.email %>
              <br />
              <%= phone_to person.phone %>
            </td>
            <td><%= linkedin_to person.linkedin_profile_url %></td>
            <td><%= person.next_contact_on.strftime('%-d %b %Y') %></td>
            <td><%= person.source_of_contact %></td>
            <td><%= person.cv_sent_on&.strftime('%-d %b %Y') %></td>
            <td><%= person.cv_version %></td>
            <td><%= labels_for_status(person.status) %></td>

            <td>
              <%= link_to edit_person_path(person) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </td>
            <td>
              <%= link_to person, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <p><%= link_to 'New Person', new_person_path, class: 'btn btn-success' %></p>
  </div>
</div>
