<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>
            <%= t('activerecord.attributes.people.name') %>
            <br />
            <%= t('activerecord.attributes.people.organisation') %>
          </th>
          <th>
            <%= t('activerecord.attributes.people.email') %>
            <br />
            <%= t('activerecord.attributes.people.phone') %>
          </th>
          <th><%= t('activerecord.attributes.people.linkedin_profile_url') %></th>
          <th><%= t('activerecord.attributes.people.next_contact_on') %></th>
          <th><%= t('activerecord.attributes.people.source_of_contact') %></th>
          <th><%= t('activerecord.attributes.people.cv_sent_on') %></th>
          <th><%= t('activerecord.attributes.people.cv_version') %></th>
          <th><%= t('activerecord.attributes.people.status') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% people.each do |person| %>
          <tr>
            <td>
              <%= link_to person.full_name, person %>
              <br />
              <%= link_to person.organisation.name, person.organisation %>
            </td>
            <td>
              <%= mail_to person.email %>
              <br />
              <%= phone_to person.phone %> -
              <%= sms_to person.phone %>
            </td>
            <td><%= linkedin_to person.linkedin_profile_url %></td>
            <td><%= person.next_contact_on&.strftime('%-d %b %Y') %></td>
            <td><%= person.source_of_contact %></td>
            <td><%= person.cv_sent_on&.strftime('%-d %b %Y') %></td>
            <td><%= person.cv_version %></td>
            <td><%= labels_for_status(person.status) %></td>
            <td>
              <%= link_to edit_person_path(person) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </td>
            <td>
              <%= link_to person, method: :delete, data: { confirm: I18n.t('views.general.are_you_sure') } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
