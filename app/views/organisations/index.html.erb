<h1>Organisations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Postal address</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= link_to organisation.name, organisation %></td>
        <td><%= organisation.postal_address %></td>
        <td><%= organisation.phone %></td>

        <td>
          <%= link_to edit_organisation_path(organisation) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to organisation, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organisation', new_organisation_path, class: 'btn btn-success' %>
