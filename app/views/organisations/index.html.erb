<%= page_heading(t('views.organisations.index.h1')) %>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.organisations.name') %></th>
          <th><%= t('activerecord.attributes.organisations.postal_address') %></th>
          <th><%= t('activerecord.attributes.organisations.phone') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @organisations.each do |organisation| %>
          <tr>
            <td><%= link_to organisation.name, organisation %></td>
            <td><%= organisation.postal_address %></td>
            <td><%= phone_to organisation.phone %></td>
            <td>
              <%= link_to edit_organisation_path(organisation) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </td>
            <td>
              <%= link_to organisation, method: :delete, data: { confirm: I18n.t('views.general.are_you_sure') } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p><%= link_to t('views.organisations.index.new'), new_organisation_path, class: 'btn btn-success' %></p>
  </div>
</div>
