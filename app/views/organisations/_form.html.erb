<%= form_for(@organisation, html: { class: 'form-horizontal' } ) do |f| %>
  <% if @organisation.errors.any? %>
    <%= render partial: 'layouts/form_errors', locals: { thing: @organisation } %>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('activerecord.attributes.organisations.name'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :postal_address, t('activerecord.attributes.organisations.postal_address'),class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :postal_address, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, t('activerecord.attributes.organisations.phone'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.phone_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit t('views.general.save'), class: 'btn btn-success'%>
      <%= t('views.general.or') %>
      <%= link_to t('views.general.cancel'), organisations_path %>
    </div>
  </div>
<% end %>
