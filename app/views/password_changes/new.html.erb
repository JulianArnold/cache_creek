<%= page_heading(t('views.password_change.new.h1')) %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@user, url: password_changes_path, method: :post, html: { class: 'form-horizontal', autocomplete: 'off' } ) do |f| %>
      <% if @user.errors.any? %>
        <%= render partial: 'layouts/form_errors', locals: { thing: @user } %>
      <% end %>

      <div class="form-group">
        <%= f.label :current_password, t('activerecord.attributes.users.current_password'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :current_password, class: 'form-control', autocomplete: 'off', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, t('activerecord.attributes.users.password'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t('activerecord.attributes.users.password_confirmation'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit t('views.password_change.new.save'), class: 'btn btn-success'%>
        </div>
      </div>
    <% end %>
  </div>
</div>