<%= form_for(@admin_subscription_product, html: { class: 'form-horizontal' }) do |f| %>

  <% if @admin_subscription_product.errors.any? %>
    <%= render partial: 'layouts/form_errors', locals: { thing: @admin_subscription_product } %>
  <% end %>

  <%= f.hidden_field :lock_version %>

  <div class="form-group">
    <%= f.label :name, t('activerecord.attributes.admin_subscription_products.name'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :curriculum_vitae_limited %><br>
    <%= f.check_box :curriculum_vitae_limited %>
  </div>
  <div class="field">
    <%= f.label :curriculum_vitae_limit %><br>
    <%= f.number_field :curriculum_vitae_limit %>
  </div>
  <div class="field">
    <%= f.label :opportunity_limited %><br>
    <%= f.check_box :opportunity_limited %>
  </div>
  <div class="field">
    <%= f.label :opportunity_limit %><br>
    <%= f.number_field :opportunity_limit %>
  </div>
  <div class="field">
    <%= f.label :organisation_limited %><br>
    <%= f.check_box :organisation_limited %>
  </div>
  <div class="field">
    <%= f.label :organisation_limit %><br>
    <%= f.number_field :organisation_limit %>
  </div>
  <div class="field">
    <%= f.label :person_limited %><br>
    <%= f.check_box :person_limited %>
  </div>
  <div class="field">
    <%= f.label :person_limit %><br>
    <%= f.number_field :person_limit %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
