<%= page_heading(@admin_subscription_product.name) %>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.name') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.name %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.description') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.description %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.curriculum_vitae_limited') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.curriculum_vitae_limited %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.curriculum_vitae_limit') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.curriculum_vitae_limit %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.opportunity_limited') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.opportunity_limited %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.opportunity_limit') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.opportunity_limit %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.organisation_limited') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.organisation_limited %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.organisation_limit') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.organisation_limit %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.person_limited') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.person_limited %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_products.person_limit') %></th>
          <td class="col-sm-9"><%= @admin_subscription_product.person_limit %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="btn-group">
  <%= link_to t('views.general.edit'), edit_admin_subscription_product_path(@admin_subscription_product), class: 'btn btn-success' %>
  <%= link_to t('views.general.back'), admin_subscription_products_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <div class="col-sm-12">
    <h3><%= t('views.subscription_plans.index.h1') %></h3>
    <% if @admin_subscription_product.admin_subscription_plans.any? %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.admin_subscription_plans.name') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.currency') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.price_cent') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.billing_frequency_months') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.stripe_uuid') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.trial_period_days') %></th>
            <th><%= t('activerecord.attributes.admin_subscription_plans.active') %></th>
          </tr>
        </thead>
        <tbody>
          <% @admin_subscription_product.admin_subscription_plans.each do |plan| %>
            <tr>
              <td><%= link_to plan.name, plan %></td>
              <td><%= plan.currency %></td>
              <td><%= plan.price_cent %></td>
              <td><%= plan.billing_frequency_months %></td>
              <td><%= plan.stripe_uuid %></td>
              <td><%= plan.trial_period_days %></td>
              <td><%= plan.active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <%= link_to t('views.subscription_plans.new.h1'), new_admin_subscription_plan_path(subscription_product_id: @admin_subscription_product.id), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
