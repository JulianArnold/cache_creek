<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.admin_subscription_products.name') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.description') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.curriculum_vitae_limited') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.curriculum_vitae_limit') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.opportunity_limited') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.opportunity_limit') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.organisation_limited') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.organisation_limit') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.person_limited') %></th>
          <th><%= t('activerecord.attributes.admin_subscription_products.person_limit') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admin_subscription_products.each do |admin_subscription_product| %>
          <tr>
            <% admin_subscription_product.lock_version %>
            <td><%= admin_subscription_product.name %></td>
            <td><%= admin_subscription_product.description %></td>
            <td><%= admin_subscription_product.curriculum_vitae_limited %></td>
            <td><%= admin_subscription_product.curriculum_vitae_limit %></td>
            <td><%= admin_subscription_product.opportunity_limited %></td>
            <td><%= admin_subscription_product.opportunity_limit %></td>
            <td><%= admin_subscription_product.organisation_limited %></td>
            <td><%= admin_subscription_product.organisation_limit %></td>
            <td><%= admin_subscription_product.person_limited %></td>
            <td><%= admin_subscription_product.person_limit %></td>
            <td>
              <%= link_to edit_admin_subscription_product_path(admin_subscription_product) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </td>
            <td>
              <%= link_to admin_subscription_product, method: :delete, data: { confirm: I18n.t('views.general.are_you_sure') } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
