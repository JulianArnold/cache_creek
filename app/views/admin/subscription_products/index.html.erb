<p id="notice"><%= notice %></p>

<h1>Listing Admin Subscription Products</h1>

<table>
  <thead>
    <tr>
      <th>Lock version</th>
      <th>Name</th>
      <th>Description</th>
      <th>Curriculum vitae limited?</th>
      <th>Curriculum vitae limit</th>
      <th>Opportunity limited?</th>
      <th>Opportunity limit</th>
      <th>Organisation limited?</th>
      <th>Organisation limit</th>
      <th>Person limited?</th>
      <th>Person limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_subscription_products.each do |admin_subscription_product| %>
      <tr>
        <td><%= admin_subscription_product.lock_version %></td>
        <td><%= admin_subscription_product.name %></td>
        <td><%= admin_subscription_product.description %></td>
        <td><%= admin_subscription_product.curriculum_vitae_limited %></td>
        <td><%= admin_subscription_product.curriculum_vitae_limit %></td>
        <td><%= admin_subscription_product.opportunity_limited %></td>
        <td><%= admin_subscription_product.opportunity_limit %></td>
        <td><%= admin_subscription_product.organisation_limited %></td>
        <td><%= admin_subscription_product.organisation_limit %></td>
        <td><%= admin_subscription_product.person_limited %></td>
        <td><%= admin_subscription_product.person_limit %></td>
        <td><%= link_to 'Show', admin_subscription_product %></td>
        <td><%= link_to 'Edit', edit_admin_subscription_product_path(admin_subscription_product) %></td>
        <td><%= link_to 'Destroy', admin_subscription_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

