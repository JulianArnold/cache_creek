<%= page_heading(@admin_subscription_plan.name) %>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.subscription_product_id') %></th>
          <td class="col-sm-9"><%= link_to @admin_subscription_plan.admin_subscription_product&.name, @admin_subscription_plan.admin_subscription_product %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.name') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.name %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.price_cent') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.price_cent %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.billing_frequency_months') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.billing_frequency_months %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.currency') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.currency %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.stripe_uuid') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.stripe_uuid %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.trial_period_days') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.trial_period_days %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.admin_subscription_plans.active') %></th>
          <td class="col-sm-9"><%= @admin_subscription_plan.active %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="btn-group">
  <%= link_to t('views.general.edit'), edit_admin_subscription_plan_path(@admin_subscription_plan), class: 'btn btn-success' %>
  <%= link_to t('views.general.back'), admin_subscription_plans_path, class: 'btn btn-success' %>
</div>
