<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('views.general.validation_error', { count: thing.errors.count }) %></h3>
  </div>
  <div class="panel-body">
    <ul>
      <% thing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>