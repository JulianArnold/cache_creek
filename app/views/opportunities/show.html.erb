<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1><%= @opportunity.job_title %></h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-sm-3">Organisation</th>
          <td class="col-sm-9"><%= link_to @opportunity.organisation.name, @opportunity.organisation %></td>
        </tr>
        <tr>
          <th>Person</th>
          <td><%= link_to @opportunity.person.full_name, @opportunity.person %></td>
        </tr>
        <tr>
          <th>Job Title</th>
          <td><%= @opportunity.job_title %></td>
        </tr>
        <tr>
          <th>Job Description</th>
          <td><%= @opportunity.job_description %></td>
        </tr>
        <tr>
          <th>Category</th>
          <td><%= @opportunity.category %></td>
        </tr>
      </tbody>
    </table>

    <br />

    <div class="btn-group">
      <%= link_to 'Edit', edit_opportunity_path(@opportunity), class: 'btn btn-success' %>
      <%= link_to 'Back', opportunities_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
