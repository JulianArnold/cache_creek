<%= page_heading(@opportunity.job_title) %>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-sm-3"><%= t('activerecord.attributes.opportunities.organisation') %></th>
          <td class="col-sm-9"><%= link_to @opportunity.organisation.name, @opportunity.organisation %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.opportunities.person') %></th>
          <td><%= link_to @opportunity.person.full_name, @opportunity.person %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.opportunities.job_title') %></th>
          <td><%= @opportunity.job_title %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.opportunities.job_description') %> </th>
          <td><%= @opportunity.job_description %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.opportunities.category') %></th>
          <td><%= @opportunity.category %></td>
        </tr>
      </tbody>
    </table>

    <br />

    <div class="btn-group">
      <%= link_to t('views.general.edit'), edit_opportunity_path(@opportunity), class: 'btn btn-success' %>
      <%= link_to t('views.general.back'), opportunities_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
