<p id="notice"><%= notice %></p>

<h1>Opportunities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Organisation</th>
      <th>Person</th>
      <th>Job title</th>
      <th>Job description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.organisation.name %></td>
        <td><%= opportunity.person.first_name %></td>
        <td><%= opportunity.job_title %></td>
        <td><%= opportunity.job_description %></td>
        <td><%= opportunity.category %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path, class: 'btn btn-success'%>
