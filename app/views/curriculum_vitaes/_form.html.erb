<%= form_for(@curriculum_vitae, html: { multipart: true, class: 'form-horizontal' }) do |f| %>
  <% if @curriculum_vitae.errors.any? %>
    <%= render partial: 'layouts/form_errors', locals: { thing: @curriculum_vitae } %>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('activerecord.attributes.curriculum_vitae.name'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, t('activerecord.attributes.curriculum_vitae.description'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :upload, t('activerecord.attributes.curriculum_vitae.upload'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :upload, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit t('views.general.save'), class: 'btn btn-success' %>
      <%= t('views.general.or') %>
      <%= link_to t('views.general.cancel'), curriculum_vitaes_path %>
    </div>
  </div>
<% end %>
