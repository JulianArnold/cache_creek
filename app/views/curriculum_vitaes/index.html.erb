<%= page_heading(t('views.curriculum_vitaes.index.h1')) %>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.curriculum_vitae.name') %></th>
          <th><%= t('activerecord.attributes.curriculum_vitae.description') %></th>
          <th><%= t('activerecord.attributes.curriculum_vitae.upload') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @curriculum_vitaes.each do |curriculum_vitae| %>
          <tr>
            <td><%= link_to curriculum_vitae.name, curriculum_vitae %></td>
            <td><%= curriculum_vitae.description %></td>
            <td><%= curriculum_vitae.upload_file_name %></td>
            <td>
              <%= link_to edit_curriculum_vitae_path(curriculum_vitae) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </td>
            <td>
              <%= link_to curriculum_vitae, method: :delete, data: { confirm: I18n.t('views.general.are_you_sure') } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p><%= link_to t('views.curriculum_vitaes.index.new'), new_curriculum_vitae_path, class: 'btn btn-success' %></p>
  </div>
</div>
